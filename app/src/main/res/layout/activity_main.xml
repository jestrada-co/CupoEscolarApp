<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.MainActivity">

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical"
        android:paddingTop="@dimen/padding_button_double"
        android:paddingBottom="@dimen/padding_button_double"
        android:paddingLeft="@dimen/padding_button_cuadruple"
        android:paddingRight="@dimen/padding_button_cuadruple"
        android:layout_alignEnd="@id/et_password"
        android:layout_below="@id/et_password"
        style="@style/TextButton"
        android:text="@string/sign_out"/>

    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">
    </ProgressBar>

</RelativeLayout>