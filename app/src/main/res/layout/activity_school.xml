<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_school"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mColorBorder"
    tools:context=".school.view.SchoolActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_activity_toolbar" />

    <ScrollView
        android:id="@+id/sv_inputs_school"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RelativeLayoutInput"
                    android:layout_marginBottom="@dimen/margin_vertical_double">
                    <LinearLayout
                        android:id="@+id/ll_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_code"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/doc_id"
                            android:src="@drawable/ic_doc_id_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_code"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:inputType="text"
                                android:hint="@string/school_code"
                                android:nextFocusForward="@id/et_name"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_code"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_school_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:inputType="text"
                                android:hint="@string/school_name"
                                android:nextFocusForward="@id/et_director"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_name"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_director"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_director_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_director"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_director"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/school_director"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_director"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_days"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_school_days_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_days"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/school_days"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_grades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_days"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_grades"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_grade_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_grades"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_grades"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/school_grades"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_grades"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_calendar"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_school_days_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_calendar"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_calendar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/school_calendar"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_calendar"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_address"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_address_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_address"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/address"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_phones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_address"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_phones"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_phone_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_phones"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_phones"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/school_phones"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_phones"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_school_email"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_email_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_school_email"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_school_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:enabled="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/email"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_school_email"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_student"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_student_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_student"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_student"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:longClickable="false"
                                android:focusable="false"
                                android:inputType="text"
                                android:hint="@string/select_student" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav_enroll_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_enroll_student_bold_96"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />


    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>