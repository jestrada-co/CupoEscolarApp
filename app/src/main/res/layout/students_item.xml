<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/mColorBackgroundSection"
    style="@style/LinearLayoutItem"
    android:weightSum="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ImageInputField"
            android:contentDescription="@string/first_name"
            android:src="@drawable/ic_student_light_96"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/TextViewField"/>
        <TextView
            android:id="@+id/tv_doc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewField2"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewField2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ImageInputField"
            android:contentDescription="@string/first_name"
            android:src="@drawable/ic_next_light_96"/>
    </LinearLayout>


</LinearLayout>
