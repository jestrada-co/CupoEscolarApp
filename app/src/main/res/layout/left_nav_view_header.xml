<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_nav_view_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_nav_view_header_custom"
    android:layout_margin="@dimen/margin_vertical"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/mColorBackgroundSection"
    android:foreground="?android:attr/selectableItemBackgroundBorderless">

    <!--Iconos diseÃ±ados por Freepik desde www.flaticon.com con licencia CC 3.0 BY -->
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/iv_avatar_width_and_height"
        android:layout_height="@dimen/iv_avatar_width_and_height"
        android:scaleType="centerCrop"
        style="@style/ImageAvatar"
        android:contentDescription="@string/click_to_change_avatar"
        android:src="@drawable/ic_account_circle"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginEnd="@dimen/margin_vertical"
        android:layout_gravity="bottom"
        android:gravity="end"
        style="@style/TextBodyInvert2"
        android:text="@string/email"
        android:layout_centerHorizontal="true"/>
</android.support.v7.widget.CardView>
