<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_edit_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mColorBorder"
    tools:context=".student.view.AddEditStudentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/top_activity_toolbar" />

    <ScrollView
        android:id="@+id/sv_inputs_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RelativeLayoutInput">
                    <LinearLayout
                        android:id="@+id/ll_doc_id_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_doc_id_type"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/doc_id"
                            android:src="@drawable/ic_doc_id_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_doc_id_type"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_doc_id_type"
                                style="@style/TextInputField"
                                android:focusable="false"
                                android:longClickable="false"
                                android:inputType="text"
                                android:hint="@string/doc_id_type"
                                android:nextFocusForward="@id/et_doc_id"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_doc_id"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_doc_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:inputType="number"
                                android:hint="@string/doc_id"
                                android:nextFocusForward="@id/et_first_name"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_doc_id_type"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_names"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_avatar_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_first_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:inputType="textPersonName"
                                android:hint="@string/first_name"
                                android:nextFocusForward="@id/et_last_name"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_first_name"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_last_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_avatar_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_last_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:longClickable="false"
                                android:inputType="textPersonName"
                                android:hint="@string/last_name"
                                android:nextFocusForward="@id/rb_male"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:layout_below="@id/ll_last_name"
                        android:weightSum="1">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/genre_male"
                            android:src="@drawable/ic_genre_light_96"/>
                        <RadioGroup
                            android:id="@+id/rg_genre"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rb_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:text="@string/genre_male"
                                android:nextFocusForward="@id/rb_female" />
                            <RadioButton
                                android:id="@+id/rb_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:text="@string/genre_female"
                                android:nextFocusForward="@id/et_birthdate"/>
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_genre"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:weightSum="1">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/birthdate"
                            android:src="@drawable/ic_date_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_birthdate"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_birthdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:longClickable="false"
                                android:focusable="false"
                                android:inputType="date"
                                android:hint="@string/birthdate" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_relationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_double"
                        android:orientation="horizontal"
                        android:layout_below="@+id/ll_birthday"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/iv_relationship"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/first_name"
                            android:src="@drawable/ic_relationship_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_relationship"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_relationship"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:longClickable="false"
                                android:focusable="false"
                                android:inputType="text"
                                android:hint="@string/relationship" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_personal_info"
                    style="@style/RelativeLayoutInput"
                    android:layout_marginBottom="@dimen/margin_vertical_double">
                    <TextView
                        android:id="@+id/tv_grade_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/mColorPrimaryText"
                        android:text="@string/grade_summary" />

                    <LinearLayout
                        android:id="@+id/ll_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_grade_summary"
                        android:layout_marginTop="@dimen/margin_vertical_triple"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            style="@style/ImageInputField"
                            android:contentDescription="@string/address"
                            android:src="@drawable/ic_grade_light_96"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_grade"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/TextInputField"
                                android:longClickable="false"
                                android:focusable="false"
                                android:enabled="false"
                                android:inputType="number"
                                android:hint="@string/grade"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_bold_96"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_bold_96"
        android:backgroundTint="@color/mColorBackgroundSection"
        android:tint="@color/mColorSecondaryText"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fav_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save_bold_96"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />


    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>