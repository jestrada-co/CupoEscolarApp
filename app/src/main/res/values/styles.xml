<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">@color/mColorPrimaryDark</item>
        <item name="colorAccent">@color/mColorAccent</item>
        <item name="android:textColorPrimary">@color/mColorPrimaryText</item>
        <item name="android:textColorSecondary">@color/mColorSecondaryText</item>
        <item name="android:colorButtonNormal">@color/mColorPrimaryLight</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MainToolbar" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/mColorPrimaryLight</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubtitle1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSubtitle2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBodyInvert1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBodyInvert2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextField" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputField" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:textColorHint">@color/mColorHint</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextButtonSocial" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
