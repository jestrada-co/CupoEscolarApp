<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">@color/mColorPrimaryDark</item>
        <!--<item name="colorAccent">@color/mColorAccent</item>-->
        <item name="colorAccent">@color/mColorPrimaryLight</item>
        <item name="android:textColorPrimary">@color/mColorPrimaryText</item>
        <item name="android:textColorSecondary">@color/mColorPrimaryLight</item>
        <item name="android:colorButtonNormal">@color/mColorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSubtitle1" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSubtitle2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimaryText</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimary</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBodyInvert1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimaryText</item>
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBodyInvert2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorSecondaryText</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimaryText</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mColorPrimaryText</item>
        <item name="android:fontFamily">@font/worksans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputField" parent="TextAppearance.AppCompat">
        <item name="android:colorAccent">@color/mColorSecondaryText</item>
        <item name="android:backgroundTint">@color/mColorBorder</item>
        <item name="android:textColor">@color/mColorPrimaryText</item>
        <item name="android:buttonTint">@color/mColorPrimaryText</item>
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_text</item>
    </style>

    <style name="ImageInputField">
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/mColorSecondaryText</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ImageBulletPoint">
        <item name="android:textAlignment">center</item>
        <item name="android:tint">@color/mColorPrimaryDark</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ImageAvatar">
        <item name="android:textAlignment">center</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableTint">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/margin_vertical</item>
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_button_double</item>
        <item name="android:paddingBottom">@dimen/padding_button_double</item>
        <item name="android:paddingStart">@dimen/padding_button_cuadruple</item>
        <item name="android:paddingEnd">@dimen/padding_button_cuadruple</item>
    </style>

    <style name="TextButtonCardView" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/mColorBackgroundSection</item>
        <item name="android:textColor">@color/mColorSecondaryText</item>
        <item name="android:drawableTint">@color/mColorSecondaryText</item>
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/padding_button</item>
    </style>

    <style name="RelativeLayoutInput" >
        <item name="android:padding">@dimen/margin_vertical_cuadruple</item>
        <item name="android:paddingStart">@dimen/margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_quintuple</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@drawable/layout_background</item>
    </style>


    <style name="TextButtonSocial" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/worksans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
