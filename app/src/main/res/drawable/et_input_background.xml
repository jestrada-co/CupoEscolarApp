<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@android:color/white"/>
            <stroke
                android:width="@dimen/et_shape_stroke_width"
                android:color="@color/mColorAccent"/>
            <corners
                android:topLeftRadius="@dimen/et_shape_corner_radius"
                android:topRightRadius="@dimen/et_shape_corner_radius"
                android:bottomRightRadius="@dimen/et_shape_corner_radius"
                android:bottomLeftRadius="@dimen/et_shape_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@android:color/white"/>
            <stroke
                android:width="@dimen/et_shape_stroke_width"
                android:color="@color/mColorBorder"/>
            <corners
                android:topLeftRadius="@dimen/et_shape_corner_radius"
                android:topRightRadius="@dimen/et_shape_corner_radius"
                android:bottomRightRadius="@dimen/et_shape_corner_radius"
                android:bottomLeftRadius="@dimen/et_shape_corner_radius" />
        </shape>
    </item>


</selector>
